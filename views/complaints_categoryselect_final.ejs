            function showdiv(){
                document.getElementById('profile-box').style.height ="60%";
                document.getElementById('profile-img').style.display='flex';
                document.getElementById('profile-info').style.display='block';
                document.getElementById('darkmode').style.display='grid';

            }

            window.onload = function(){
                var hidediv = document.getElementById('profile-box');
                var profile = document.getElementById('profile-img');
                var info = document.getElementById('profile-info');
                var darkmode = document.getElementById('darkmode');

                document.onclick = function(div){
                    if(div.target.id!='box2' && div.target.id!="profile" && div.target.className!='info' && div.target.id!="darkmode" && div.target.className!='switch' && div.target.className!='theme-switch' && div.target.id!='slider' && div .target.id!='checkbox' && div.target.className!='change-password' && div.target.id!='logout-btn'){
                        hidediv.style.height='0';
                        profile.style.display='none';
                        info.style.display='none';
                        darkmode.style.display='none';
                    }
                }
            }

            function proceed(){
                document.getElementById('initial-container').style.left ="0%";
                document.getElementById('final-container').style.top="30vh";
                document.getElementById('final-container').style.opacity="1";
                document.getElementById('proceedbtn').style.display="none";
            }
            function enablebtn(){
                var check=document.getElementById("disable-checkbox");

                if(check.checked){
                    document.getElementById("submit-button").disabled=false;
                    document.getElementById("submit-button").style.backgroundImage="linear-gradient(90deg, #A3278F 0%, #E52F50 100%)";
                    document.getElementById("submit-button").style.boxShadow="0 4px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)";
                }
                else{
                    document.getElementById("submit-button").disabled = true;
                    document.getElementById("submit-button").style.backgroundImage="none";
                    document.getElementById("submit-button").style.boxShadow="none";
                }
            }


            function darkmode(){
                var element= document.body;

                element.classList.toggle('dark-theme-body');
            }

