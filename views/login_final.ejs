<!DOCTYPE html>
<html>
    <head>
        <link href='https://fonts.googleapis.com/css?family=Varela Round' rel='stylesheet'>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..40,100..700,0..1,-50..200" />
        <link rel="stylesheet" type="text/css" href="http://localhost:8080/styles/login_final.css">
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        <link href='https://fonts.googleapis.com/css?family=Aldrich' rel='stylesheet'>
    </head>
    <body>
        <div id="main">
            <div class="login-container" data-aos="fade-right" data-aos-offset="400" data-aos-easing="ease-in-out" data-aos-duration="1000">
                <div id="imageholder">
                    <img id="img-menu" src="https://iiitdwd.ac.in/img/logon.png" >
                </div>
                <div id="loginbox">
                    <div class="menu21">
                        <form action="/login" method="POST">
                        <div class="menu21-div">
                            <div id="login-header">LOG IN</div>
                            <div id="login-username" >
                                <input type="text" name="username" required>
                                <label>USERNAME</label>
                                <div class="profile">
                                    <span class="material-symbols-outlined">
                                        person
                                    </span>
                                </div>
                            </div>
                            <div id="login-password">
                                <input type="password" name="password" required>
                                <label>PASSWORD</label>
                                <div class="profile">
                                    <span class="material-symbols-outlined">
                                        lock
                                    </span>
                                </div>
                            </div>
                            <div id="loginbtn-box">
                                <!-- <button type="submit" id="loginbtn">LOG IN</button> -->
                                <div class="wrap-login100-form-btn">
                                    <div class="login100-form-bgbtn"></div>
                                    <button class="login100-form-btn">
                                    Login
                                    </button>
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
            
                    <div class="menu22">
                        <div class="menu22-div">
                            <div class="menu221"><%=invalid%></div>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </div>
        <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
        <script>
          AOS.init();
        </script>
    </body>
</html>


