        <script>
            function Home(){
                location.assign('C:/Users/Admin/Desktop/Projects/views/Home.html');
            }

            function changepassword(){
                location.assign('C:/Users/Admin/Desktop/Projects/views/Change_password.html');
            }

            function logout(){
                location.assign('C:/Users/Admin/Desktop/Projects/views/Login.html');
            }

            function showdiv(){
                document.getElementById('profile-box').style.height ="60%";
                document.getElementById('profile-img').style.display='flex';
                document.getElementById('profile-info').style.display='block';
                document.getElementById('darkmode').style.display='grid';

            }

            window.onload = function(){
                var hidediv = document.getElementById('profile-box');
                var profile = document.getElementById('profile-img');
                var info = document.getElementById('profile-info');
                var darkmode = document.getElementById('darkmode');

                document.onclick = function(div){
                    if(div.target.id!='box2' && div.target.id!="profile" && div.target.className!='info' && div.target.id!="darkmode" && div.target.className!='switch' && div.target.className!='theme-switch' && div.target.id!='slider' && div .target.id!='checkbox' && div.target.className!='change-password' && div.target.id!='logout-btn'){
                        hidediv.style.height='0';
                        profile.style.display='none';
                        info.style.display='none';
                        darkmode.style.display='none';
                    }
                }
            }

            function enablebtn(){
                var check=document.getElementById("disable-checkbox");

                if(check.checked){
                    document.getElementById("submit-button").disabled=false;
                    document.getElementById("submit-button").style.backgroundImage="linear-gradient(-90deg, var(--topbar-light-color1) 0%, var(--green3) 100%)";
                    document.getElementById("submit-button").style.boxShadow="0 4px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)";
                }
                else{
                    document.getElementById("submit-button").disabled = true;
                    document.getElementById("submit-button").style.backgroundImage="none";
                    document.getElementById("submit-button").style.boxShadow="none";
                }
            }
            function showoutpass(){
                document.getElementById('status-body').style.display='none';
                document.getElementById('outpass-body').style.display='grid';
                document.getElementById('status-btn').style.background="var(--options-background)";
                document.getElementById('remaining').style.borderTopLeftRadius="0px";
                document.getElementById('status-btn').style.borderTop="1px solid #c3c6d1";
                document.getElementById('status-btn').style.borderBottom="1px solid #c3c6d1";
                document.getElementById('status-btn').style.borderLeft="1px solid #c3c6d1";
                document.getElementById('remaining').style.borderLeft="none";
                document.getElementById('outpass-btn').style.borderBottom="3px solid #1e90ff";
                document.getElementById('status-btn').style.borderBottom="none";
                document.getElementById('outpass-btn').style.borderLeft="none";
                document.getElementById('outpass-btn').style.background="none";
                document.getElementById('outpass-btn').style.borderTop="none";
                document.getElementById('outpass-btn').style.borderRight="none";
                document.getElementById('outpass-btn').style.fontWeight="bold";
                document.getElementById('status-btn').style.fontWeight="normal";
                document.getElementById('remaining').style.borderLeft="1px solid #c3c6d1";
            }

            function showstatus(){
                document.getElementById('status-body').style.display='grid';
                document.getElementById('outpass-body').style.display='none';
                document.getElementById('outpass-btn').style.background="var(--options-background)";
                document.getElementById('outpass-btn').style.borderTop="1px solid #c3c6d1";
                document.getElementById('outpass-btn').style.borderRight="1px solid #c3c6d1";
                document.getElementById('status-btn').style.borderBottom="3px solid #1e90ff";
                document.getElementById('outpass-btn').style.borderBottom="none";
                document.getElementById('status-btn').style.background="none";
                document.getElementById('status-btn').style.borderTop="none";
                document.getElementById('status-btn').style.borderLeft="none";
                document.getElementById('status-btn').style.borderRight="none";
                document.getElementById('remaining').style.borderTopLeftRadius="8px";
                document.getElementById('remaining').style.borderLeft="1px solid #c3c6d1";
                document.getElementById('outpass-btn').style.fontWeight="normal";
                document.getElementById('status-btn').style.fontWeight="bold";
            }
            
            function Complaints(){
                location.assign('C:/Users/Admin/Desktop/Projects/views/Complaints.html');
            }

            function darkmode(){
                var element= document.body;

                element.classList.toggle('dark-theme-body');
            }
        </script>

    </head>
    <body>
        <!-- <div id="background"></div> -->
        <div id="top-navbar">
            <div id="image-holder">
                <div id="logo"></div>
            </div>
            <div id="content-holder">
                <div id="social-media"></div>
                <div id="slanted-item">
                    <div id="menu-1">
                        <div id="menu-container">
                            <a class="menu" href="/home">HOME</a>
                            <a class="menu" href="/complaintscategory" >COMPLAINTS</a>
                            <a class="menu" href="/outpass">OUTPASS</a>
                        </div>
                    </div> 

                    <div id="profile" onclick="showdiv()">
                        <i class='fas fa-user fa-2x' style="pointer-events: none;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div id="profile-box">
            <div id="box2">
                <div id="profile-img">
                    <i class='fas fa-user-edit' style='font-size:90px;color:white'></i>
                </div>
                <form>
                    <div id="profile-info">
                        <div class="info" style="font-size:20px;"><%=pname%></div>
                        <div class="info"><%=prollno%></div>
                        <div class="info">Personal Contact No. : <%=ppenum%></div>
                        <div class="info">Parent contact no. : <%=ppanum%></div>
                    </div>
                </form>
                <div id="darkmode">
                    <div id="darkmode-div">
                        <div class="darkmode-font">Light</div>
                        <div class="switch">
                            <label class="theme-switch" for="checkbox">
                                <input type="checkbox" id="checkbox" />
                                <div id="slider" onclick="darkmode()"class="slider round"></div>
                            </label>
                        </div>
                        <div class="darkmode-font">Dark</div>
                    </div>

                    <a class="change-password" href="/changepassword">Change Password</a>
                

                    
                    <div class="logout">
                        <a href="/start" id="logout-btn">LOGOUT</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="background-div1"></div>
        <div id="grid-up"></div>
        <div id="maindiv">
            <div class="main-box">
                <div class="main-box-container">
                    <div class="main-header">
                        <div id="header-close-link"></div>
                        <div class="options">
                            <div id="outpass-btn" onclick="showoutpass()">OUTPASS</div>
                            <div id="status-btn" onclick="showstatus()">COMPLAINTS</div>
                            <div id="remaining"></div>
                        </div>
                    </div>
                    <div id="outpass-body">
                        <div class="history-tab-bar">
                            <div class="history-tab-outpass">
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem">S.No.</div>
                                <!-- <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem">GatePass No.</div> -->
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem">From</div>
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem">To</div>
                                <div class="center-all" style="padding-left:0.3rem">Action Taken</div>
                            </div>
                        </div>
                        <div class="history-items">
                            <div class="history-rows-outpass">
                                <%for(i=0;i<elenum;i++){%>
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem"><%=i+1%></div>
                                <!-- <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem">GatePass No.</div> -->
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem"><%=outpassdetails[i].departure%></div>
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem"><%=outpassdetails[i].arrival%></div>
                                <div class="center-all" style="padding-left:0.3rem"><%=outpassdetails[i].outpassstatus%></div>
                                <%}%>
                            </div>
                        </div>
                    </div>
                    <div id="status-body">
                        <div class="history-tab-bar">
                            <div class="history-tab-complaints">
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem">S.No.</div>
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem">Complaint</div>
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem">Category</div>
                                
                            </div>
                        </div>
                        <div class="history-items">
                            <div class="history-rows-complaints">
                                <%for(j=0;j<elenum2;j++){%>
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem"><%=j+1%></div>
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem"><%=complaint[j].complaint%></div>
                                <div class="center-all" style="border-right:1px solid #c3c6d1;padding-left:0.3rem"><%=complaint[j].category%></div>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
